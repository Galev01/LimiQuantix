<?xml version="1.0" encoding="UTF-8"?>
<!--
  Quantix KVM Guest Agent Windows Installer (WiX v4)
  
  Build Requirements:
  - WiX Toolset v4 (https://wixtoolset.org/)
  - Run: wix build main.wxs -o quantix-kvm-agent.msi
-->
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package 
    Name="Quantix KVM Guest Agent"
    Manufacturer="Quantix KVM"
    Version="!(bind.FileVersion.AgentExe)"
    UpgradeCode="550E8400-E29B-41D4-A716-446655440001"
    Scope="perMachine"
    InstallerVersion="500"
    Compressed="yes">
    
    <SummaryInformation
      Description="Quantix KVM Guest Agent for VM integration"
      Manufacturer="Quantix KVM" />
    
    <!-- Major upgrade support -->
    <MajorUpgrade
      DowngradeErrorMessage="A newer version of [ProductName] is already installed."
      Schedule="afterInstallInitialize" />
    
    <!-- Embed all files in the MSI -->
    <MediaTemplate EmbedCab="yes" />
    
    <!-- Icon for Add/Remove Programs -->
    <Icon Id="icon.ico" SourceFile="icon.ico" />
    <Property Id="ARPPRODUCTICON" Value="icon.ico" />
    <Property Id="ARPHELPLINK" Value="https://github.com/Quantix-KVM/LimiQuantix/wiki" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/Quantix-KVM/LimiQuantix" />
    
    <!-- Installation directories -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="Quantix-KVM">
        <Directory Id="AgentFolder" Name="Agent" />
      </Directory>
    </StandardDirectory>
    
    <!-- ProgramData directory for config and logs -->
    <StandardDirectory Id="CommonAppDataFolder">
      <Directory Id="QuantixKVMData" Name="Quantix-KVM">
        <Directory Id="LogsFolder" Name="Logs" />
        <Directory Id="PreFreezeFolder" Name="pre-freeze.d" />
        <Directory Id="PostThawFolder" Name="post-thaw.d" />
      </Directory>
    </StandardDirectory>
    
    <!-- Main component: Agent executable -->
    <ComponentGroup Id="AgentComponents" Directory="AgentFolder">
      <Component Id="AgentExeComponent" Guid="550E8400-E29B-41D4-A716-446655440002">
        <File Id="AgentExe" 
              Source="quantix-kvm-agent.exe" 
              KeyPath="yes" />
        
        <!-- Windows Service Registration -->
        <ServiceInstall
          Id="AgentService"
          Name="QuantixKVMAgent"
          DisplayName="Quantix KVM Guest Agent"
          Description="Provides VM integration for Quantix KVM hypervisor"
          Type="ownProcess"
          Start="auto"
          ErrorControl="normal"
          Account="LocalSystem">
          
          <!-- Service recovery options -->
          <ServiceConfig 
            DelayedAutoStart="no"
            OnInstall="yes"
            OnReinstall="yes" />
        </ServiceInstall>
        
        <!-- Start service after install -->
        <ServiceControl
          Id="AgentServiceControl"
          Name="QuantixKVMAgent"
          Start="install"
          Stop="both"
          Remove="uninstall"
          Wait="yes" />
      </Component>
      
    </ComponentGroup>
    
    <!-- Configuration and data directories -->
    <ComponentGroup Id="DataComponents" Directory="QuantixKVMData">
      <Component Id="ConfigComponent" Guid="550E8400-E29B-41D4-A716-446655440003">
        <File Id="ConfigFile" 
              Source="config.yaml.template" 
              Name="agent.yaml" />
      </Component>
      
      <!-- Create empty directories -->
      <Component Id="LogsDirComponent" Guid="550E8400-E29B-41D4-A716-446655440004" Directory="LogsFolder">
        <CreateFolder />
      </Component>
      
      <Component Id="PreFreezeDirComponent" Guid="550E8400-E29B-41D4-A716-446655440005" Directory="PreFreezeFolder">
        <CreateFolder />
      </Component>
      
      <Component Id="PostThawDirComponent" Guid="550E8400-E29B-41D4-A716-446655440006" Directory="PostThawFolder">
        <CreateFolder />
      </Component>
    </ComponentGroup>
    
    <!-- Feature definition -->
    <Feature Id="MainFeature" Title="Quantix KVM Agent" Level="1">
      <ComponentGroupRef Id="AgentComponents" />
      <ComponentGroupRef Id="DataComponents" />
    </Feature>
    
    <!-- Custom actions for virtio-serial port detection -->
    <!-- Note: Port name kept as org.quantix.agent.0 for backward compatibility -->
    <CustomAction 
      Id="CheckVirtioPort"
      Directory="AgentFolder"
      ExeCommand="cmd.exe /c &quot;if not exist \\.\Global\org.quantix.agent.0 echo WARNING: Virtio-serial port not found. Agent may not connect.&quot;"
      Execute="immediate"
      Return="ignore" />
    
    <InstallExecuteSequence>
      <Custom Action="CheckVirtioPort" After="InstallFinalize">NOT Installed</Custom>
    </InstallExecuteSequence>
    
  </Package>
</Wix>
